# Titles
window-subtitle=working-directory

# Background
background-opacity=0.98

# Window padding
window-padding-x=2
window-padding-y=2
window-padding-balance= true

# Cursor
adjust-cursor-thickness=5
adjust-cursor-height=1

# Font and fontsize
font-family = Firacode
font-size = 16

# Spit divider
split-divider-color=darkgreen

# Clippboard
clipboard-read = allow
clipboard-write =  allow

#------------------
# Custom keybinds 
#-----------------

#  Start by clearing all default keybinds
keybind = clear

# Tabs
# keybind = ctrl+t=new_tab


# Clippboard
keybind = performable:ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_selection

# Custom keybindings for new splits 
keybind = ctrl+shift+k=new_split:up
keybind = ctrl+shift+j=new_split:down
keybind = ctrl+shift+h=new_split:left
keybind = ctrl+shift+l=new_split:right

# Close split or any surface
keybind = ctrl+shift+q=close_surface

# Custom keybindings for split navigation
keybind = ctrl+k=goto_split:up
keybind = ctrl+j=goto_split:down
keybind = ctrl+h=goto_split:left
keybind = ctrl+l=goto_split:right

# Custom keybinds for resizing slits
keybind = alt+plus=equalize_splits
keybind = alt+k=resize_split:up,10
keybind = alt+j=resize_split:down,10
keybind = alt+l=resize_split:right,10
keybind = alt+h=resize_split:left,10

# Keybinding to reload configuration
keybind = alt+r=reload_config
